<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewPlayerName"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="PlayerName"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewEnemyName"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="Enemy Name"
            android:textSize="20sp"
            android:textStyle="bold" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewPlayerHP"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="HP:" />

        <TextView
            android:id="@+id/textViewEnemyHP"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="HP:"
            android:textSize="16sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />
    </TableRow>

    <Button
        android:id="@+id/buttonAttack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Attack" />

    <Button
        android:id="@+id/buttonSkill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Skill" />

    <Button
        android:id="@+id/buttonItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Item" />

    <Button
        android:id="@+id/buttonDefend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Defend" />

    <Button
        android:id="@+id/buttonRun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Run" />

    <!-- Add more UI components as needed -->

</LinearLayout>